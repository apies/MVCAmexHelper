        </th>
        <th>
            Billable
        </th>
        <th>
            ApprovedToPush
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
